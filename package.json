{
  "devDependencies": {
    "turbo": "^2.0.3"
  },
  "scripts": {
    "dev": "turbo run dev",
    "test": "npm test --workspace apps/api "
  },
  "workspaces":[
    "apps/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "apps/api/src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/$1"
    }
  }
}
